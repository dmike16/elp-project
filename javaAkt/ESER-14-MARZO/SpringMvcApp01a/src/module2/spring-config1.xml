<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
      
    <bean name="employee5" class="app01a.bean.Employee">
        <property name="homeAddress" ref="simpleAddress5"/>
        <property name="firstName" value="Arnaldo"/>
        <property name="lastName" value="Rossini"/>
    </bean>

    <bean name="simpleAddress5" class="app01a.bean.Address">
        <constructor-arg name="line1" value="51 Antonio Resti Street"/>
        <constructor-arg name="line2" value=""/>
        <constructor-arg name="city" value="Albany"/>
        <constructor-arg name="state" value="NY"/>
        <constructor-arg name="zipCode" value="99999"/>
        <constructor-arg name="country" value="US"/>
    </bean>
    
</beans>    